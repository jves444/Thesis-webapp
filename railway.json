{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacks": {
            "config": {
                "setupCmd": "python -m pip install --upgrade pip setuptools wheel",
                "buildCmd": "pip install -r requirements.txt"
            }
        }
    },
    "deploy": {
        "runtime": "PYTHON",
        "pythonVersion": "3.10",
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "env": {
            "FLASK_ENV": "production"
        }
    }
}